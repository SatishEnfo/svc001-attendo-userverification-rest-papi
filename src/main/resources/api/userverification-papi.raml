#%RAML 1.0
title: UserVerification-PAPI
baseUri: localhost/api
description: This is Process API which has orchestration logic to handle the incoming requests and routes them to various involved system APIs (each system API connected to respective backends) and return back the responses from backends.
mediaType:
  - application/json
types:
  userrequest: !include Types/userrequest.raml
version: v1
protocols:
  - HTTP
/verifyuser:
  get:
    displayName: VerifyUser
    description: This is Query request with JSON request and response is boolean value
    body:
      application/json:
        type: userrequest
        example: !include Examples/userrequest.json
          
    responses:
      "200":
        body:
            application/json:
              example: {"Allowed" : "true"}

                                
